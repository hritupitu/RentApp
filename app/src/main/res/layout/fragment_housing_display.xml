<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HousingDisplayFragment">

<!-- TODO: PHASE 3.3 - Display information for a Housing Listing
                Make sure to include the respective Layouts and Views
                needed to accomplish what you see on the prompt and designs -->

        <!-- TODO: PHASE 3.3 - Include a Button for launching an email application -->

        <ImageView
            android:id="@+id/houseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars" />

        <Button
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/movein"
            android:text="EMAIL" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7.5dp"
            android:textStyle="bold"
            android:textSize="16.5dp"
            android:textColor="@color/black"
            android:text="Location" />

        <TextView
            android:id="@+id/numOfBeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/price"
            android:text="Number Of Beds" />

        <TextView
            android:id="@+id/numOfBaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/price"
            android:layout_toRightOf="@+id/numOfBeds"
            android:text="Number Of Baths" />

        <TextView
            android:id="@+id/covidTested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/numOfBaths"
            android:layout_below="@+id/price"
            android:text="Covid Tested" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/houseImage"
            android:layout_alignParentRight="true"
            android:text="Price"
            android:textSize="30dp"
            android:textColor="#651FFF"/>

        <TextView
            android:id="@+id/datePosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email"
            android:layout_centerInParent="true"
            android:text="Date-Posted" />

        <TextView
            android:id="@+id/description"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/numOfBaths"
            android:text="Description" />

        <TextView
            android:id="@+id/movein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/description"
            android:text="Move-In Date" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseImage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7.5dp"
        android:text="Type" />

    <ImageView
        android:id="@+id/bedrooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_toLeftOf="@id/numOfBeds"
        android:src="@drawable/ic_outline_king_bed_24" />


</RelativeLayout>
